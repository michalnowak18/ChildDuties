        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/childCardHeight"
            android:layout_margin="@dimen/childCardMargin"
            app:cardBackgroundColor="@color/childCardBackgroundColor"
            app:cardCornerRadius="@dimen/childCardCornerRadius"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/check4"
                    android:layout_width="@dimen/checkIconWidth"
                    android:layout_height="@dimen/checkIconHeight"
                    android:layout_marginStart="@dimen/checkIconMarginStart"
